@{
    ViewBag.Title = "Home Page";
}

<div class="container">

    <div class="row">
        <h1>Mi primer CRUD</h1>
        <hr>
    </div>

    <div class="row" style="margin-bottom: 20px">

        <button class="btn btn-primary col-sm-4" id="btn_new">NUEVA PERSONA</button>

        <div class="col-sm-4 form-group">
            <select name="" id="select_status" class="form-control">
                <option value="2">TODOS</option>
                <option value="1">ACTIVOS</option>
                <option value="0">INACTIVOS</option>
            </select>
        </div>

        <div class="col-sm-4 form-group">
            <input type="text" class="form-control" id="txt_busqueda" placeholder="busqueda...">
        </div>
    </div>
    <div id="tableContainer" class="table-responsive row">

        <table class="table table-striped table-bordered">
            <thead id="">
                <tr>
                    <th style='text-align: center;'>Id</th>
                    <th style='text-align: center;'>Nombre</th>
                    <th style='text-align: center;'>Direccion</th>
                    <th style='text-align: center;'>Teléfono</th>
                    <th style='text-align: center;'>Estatus</th>
                    <th style='text-align: center;'>Opciones</th>
                </tr>
            </thead>
            <tbody id="tbody">
            </tbody>
        </table>

    </div>

    @*Marcar en Rojo las casillas invalidas del modal*@
    <style>
        .is-invalid {
            border: 1px solid red;
        }
    </style>

    <!-- Modal -->
    <div class="modal fade bs-example-modal-lg" id="ModalAgregarPersonas" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
        <div class="modal-dialog modal-lg" style="max-width: 85%">

            <div class="modal-content">
                <!-- contenido del modal -->

                <div class="modal-header">

                    <button arial-label="Close" type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>

                    <h1 id="lblAddPersonas"></h1>
                </div>

                <!-- cuerpo del modal-->
                <div class="modal-body">

                    <div class="row ">

                        <div class="col-md-12 col-lg-12">

                            <div class="row">

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="inputColor">
                                            Nombre:
                                        </label>
                                        <input class="form-control vfper" validar="1" id="inputNombre" placeholder="" type="text" />

                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="inputCapacidad">
                                            Apellido Paterno:
                                        </label>

                                        <input class="form-control vfper" validar="1" id="inputApellidoP" placeholder="" type="text" />

                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="inputPlace">
                                            Apellido Materno
                                        </label>

                                        <input class="form-control vfper" validar="1" id="inputApellidoM" placeholder="" type="text" />

                                    </div>

                                </div>

                                <div class="row">

                                    <div class="col-lg-4" style="margin-left: 14px;">
                                        <div class="form-group">
                                            <label for="inputMarca">
                                                Dirección:
                                            </label>
                                            <input class="form-control vfper" validar="1" id="inputDireccion" placeholder="" type="text" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="inputMarca">
                                                Teléfono:
                                            </label>
                                            <input class="form-control vfper" validar="1" id="inputTelefono" placeholder="" type="text" />

                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>

                    <div class="modal-footer">

                        <button onclick="cerrarModal()" id="btncerrarPersonas" class="btn btn-danger" type="button">
                            <i class="fa fa-times">
                            </i>
                            Eliminar
                        </button>

                        <button id="btnGuardar" class="btn btn-success" type="button">
                            <i class="fa fa-floppy-o"></i>
                            Guardar
                        </button>

                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

